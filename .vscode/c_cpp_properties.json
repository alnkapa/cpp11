{
    "configurations": [
        {
            "name": "Linux",
            "browse": {
                "path": [
                    "/usr/include",
                    "/usr/local/include",
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true
            },
            "includePath": [
                "${workspaceFolder}/src/**", // Включает все заголовочные файлы в проекте
                "/usr/include", // Стандартные заголовочные файлы
                "/usr/local/include" // Заголовочные файлы, установленные локально                
            ],
            "defines": [],
            "intelliSenseMode": "linux-gcc-x64",
            "compilerPath": "/usr/bin/g++", // Путь к компилятору
            "cppStandard": "c++20" // Стандарт C++            
        }
    ],
    "version": 4
}